    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote launch",
            "type": "lldb",
            "request": "attach",
            "pid": "${input:pid}",
            "initCommands": [
                "platform select remote-android",
                "platform connect connect://:${input:port}",
                "settings set target.inherit-env false"
            ]
        }
    ],
    "inputs": [
        {
            "id": "pid",
            "type": "promptString",
            "description": "PID to attach"
        },
        {
            "id": "port",
            "type": "promptString",
            "description": "lldb-server port",
            "default": "8086"
        }
    ]
}